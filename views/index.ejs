<%include partials/header%>

<div class="ui main text container">
    <h2 id="head" class="ui icon"><i class="blogger b icon"></i>Blogger</h2>
    <div class="ui top attached segment">
        <div class="ui divided items">
             <% blog.forEach(function(blog){ %>
    <div class="item">
        <div class="image">
            <img src="<%=blog.image%>">
        </div>
            <div class="content">
                 <a class="header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                 <div class="meta">
                <span><%=blog.created.toDateString()%></span>
                </div>
                <div class="description">
                    <p><%-blog.body.substring(0,100)%></p>
                </div> 
                 <div class="extras">
                    <a class="ui floated basic violet button" href="/blogs/<%=blog._id %>">Read More <i class="angle right icon"></i></a>
                </div>
            </div>
        </div>
        <% }); %>   
    </div>
</div>
</div>

<%include partials/footer%>